{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react",
    "declaration": true
  },
  "exclude": [
    "node_modules",
    "**/tests/*"
  ],
}
